<% unless cart.line_items.empty? %>
<div class="cart_title">カート</div>
<table>
    <%= render(cart.line_items) %>
    <tr class="total_line">
        <td colspan="2">合 計</td>
        <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
</table>
        <%= button_to "レジに進む",{controller: 'orders', action: 'new'}, {method: :get, class: "btn btn-default"} %>
        <%= button_to "空にする", cart, method: :delete, :class => 'btn btn-primary btn-xs',confirm: '本当によいですか？' %><% end %>