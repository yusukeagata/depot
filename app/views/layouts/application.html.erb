<!DOCTYPE html>
<html>
<head>
  <title>オンラインブックストア</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
􏰀 <body class='<%= controller.controller_name %>'>
<%= render 'layouts/header' %>
    <div class="container">
<!--<div id="banner">-->
<%#= image_tag("logo.png") %>
<%#= @page_title || "Pragmatic Bookshelf" %>
</div>
<div id="columns">
<div id="side">
  <%= link_to '検索', '#', :style=>"color:white;"%>
    <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
    <%= render @cart %>
    <% end %>
    <% end %>
    
      
<ul>
<li><%#= link_to 'ホーム', store_path %></li>
<li><%#= link_to '管理者ログイン', login_path %></li>
</ul> 

<% if session[:user_id] %>
<ul>
   <li><%= link_to '注文', orders_path %></li>
   <li><%= link_to '商品', products_path %></li>
   <li><%= link_to 'ユーザ', users_path %></li>
</ul>
<%= button_to 'ログアウト', logout_path, method: :delete, :class => 'btn btn-primary'%>
<% end %>
</div>
<div id="main">
<%= yield %>
</div> 
</div>

</body>
</html>
