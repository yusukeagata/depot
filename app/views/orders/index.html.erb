<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Listing Orders</h1>
<div  class="container">
    <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Pay type</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order, :class => 'btn btn-default btn-xs' %>
        <%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-default btn-xs' %>
        <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %></td>
      </tr>
      <% end %>
      </tbody>
  </table>
  </div>

<br>

<%= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>
