<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>商品一覧</h1>
<div  class="container">
    <table class="table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>説明</th>
        <th>画像URL</th>
        <th>価格</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description.truncate(20) %></td>
        <td><%= product.image_url %></td>
        <td><%= number_to_currency(product.price, :precision => 0, :format => "%u%n", :unit => "￥") %></td>
        <td><%= link_to 'Show', product, :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Destroy', product, confirm: 'Are you sure?',  method: :delete, :class => 'btn btn-default btn-xs' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>

<%= link_to 'New Product', new_product_path %>
<p><%= will_paginate @products %></p>