<% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
<% end %>

<h1>ユーザー一覧</h1>

<div  class="container">
    <table class="table">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '詳細', user, :class => 'btn btn-default btn-xs' %>
        <%= link_to '編集', edit_user_path(user), :class => 'btn btn-default btn-xs' %>
        <%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' }, :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>

